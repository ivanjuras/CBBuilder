//- Standard navigation
if navbarStyle == 'standard'
	div(
		id='MainNavigationWrapper'
	)
		div(
			id='MainNavigation',
			class=navbarWidth
		)
			.row
				.col-xs-12.p-x-0
					nav.navbar
						.col-xs-12.p-x-0
							button.navbar-toggler.hidden-lg-up.pull-xs-right(
								type='button',
								data-toggle='collapse',
								data-target='#collapsing-nav'
							)
								| &#9776 Menu
							a.navbar-brand(href=siteUrl)
								i(
									class='BrandLogo fa fa-' + brandLogo
								)
								span(class="BrandName") #{brandName}
							#collapsing-nav.collapse.navbar-toggleable-md.pull-lg-right(
								style="margin-top: 0.7rem;"
							)
								ul.nav.navbar-nav.pull-s-right
									each page in pages
										if page.category !== 'privacy-policy'
											if page.category == 'about'
												li.nav-item
													a.nav-link(href=page.url, rel="nofollow") #{page.title}
											else
												li.nav-item
													a.nav-link(href=page.url) #{page.title}

//- Logo on top navigation
else if navbarStyle == 'logo-on-top'
	div(
		id='MainNavigationWrapper'
	)
		div(
			id='MainNavigation',
			class=navbarWidth
		)
			.row
				.col-xs-12.p-x-0
					nav.navbar
						.row
							.col-xs-12.p-x-0(
								style="text-align: center"
							)
								a.navbar-brand(
									href=siteUrl,
									style="float: none"
								)
									i(
										class='BrandLogo fa fa-' + brandLogo
									)
									span(class="BrandName") #{brandName}
						.row
							.col-xs-12.p-x-0.u-flexCenter
								button.navbar-toggler.hidden-lg-up.pull-xs-right(
									type='button',
									data-toggle='collapse',
									data-target='#collapsing-nav'
								)
									| &#9776 Menu
							.col-xs-12.p-x-0.u-flexCenter
								#collapsing-nav.collapse.navbar-toggleable-md.pull-lg-right(
									style="margin-top: 0.7rem; float: none !important"
								)
									ul.nav.navbar-nav.pull-s-right
										each page in pages
											if page.category !== 'privacy-policy'
												if page.category == 'about'
													li.nav-item
														a.nav-link(href=page.url, rel="nofollow") #{page.title}
												else
													li.nav-item
														a.nav-link(href=page.url) #{page.title}


