//- Standard footer
if footer == 'standard'
	
	.Footer.container-fluid.bg-faded(
		style=footerStyles
	)
		.row.text-xs-center
			.col-xs-12
				ul.nav.nav-inline.m-b-1.p-t-1
					each page in pages
						if page.category == 'about-page'  || page.category == 'privacy-policy-page'
							li.nav-item
								a.nav-link(href=page.url, rel="nofollow") #{page.title}
						else
							li.nav-item
								a.nav-link(href=page.url) #{page.title}
				p.text-xs-center &copy; #{siteSlogan}